auto lo
iface lo inet loopback

auto eth0
allow-hotplug eth0
iface eth0 inet manual

auto wlan0
allow-hotplug wlan0
iface wlan0 inet static
  address   192.168.1.99
  netmask   255.255.255.0
  network   192.168.1.0
  broadcast 192.168.1.255
  gateway   192.168.1.1
  wpa-ssid  "{{ wifi_name }}"
  wpa-psk   "{{ wifi_pass }}"
